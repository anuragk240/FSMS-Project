<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="match_parent"
    android:padding="@dimen/entryrowpadding">

    <TextView
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/bsheetcentertext"
        android:text=""/>

    <TextView
        android:layout_width="@dimen/widthname"
        android:layout_height="wrap_content"
        android:text="Name"
        android:maxWidth="@dimen/widthname"
        android:id="@+id/assetnameid"
        android:textSize="@dimen/entrytextsize"
        android:textAlignment="viewStart"
        android:gravity="start"/>

    <TextView
        android:layout_width="@dimen/widthvalue"
        android:layout_height="wrap_content"
        android:text="Value"
        android:id="@+id/assetvalueid"
        android:textSize="@dimen/entrytextsize"
        android:maxWidth="@dimen/widthvalue"
        android:layout_toRightOf="@id/assetnameid"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="@dimen/widthname"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/liabilitynameid"
        android:textSize="@dimen/entrytextsize"
        android:layout_toRightOf="@id/assetvalueid"
        android:textAlignment="viewStart"
        android:gravity="start"/>

    <TextView
        android:layout_width="@dimen/widthvalue"
        android:layout_height="wrap_content"
        android:text="Value"
        android:id="@+id/liabilityvalueid"
        android:textSize="@dimen/entrytextsize"
        android:maxWidth="@dimen/widthvalue"
        android:layout_toRightOf="@id/liabilitynameid"
        android:textAlignment="viewEnd"
        android:gravity="end" />


</RelativeLayout>