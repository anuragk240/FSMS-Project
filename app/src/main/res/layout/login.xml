<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_bg_1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#3b7461"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:hint="Username"
        android:ems="8"
        android:inputType="text"
        android:id="@+id/usernameid"
        android:singleLine="true"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="@dimen/usernametext"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/username_bg"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="8"
        android:textStyle="italic"
        android:textAlignment="center"
        android:singleLine="true"
        android:textSize="@dimen/usernametext"
        android:padding="8dp"
        android:id="@+id/passwordid"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/usernameid"
        android:layout_marginTop="18dp"
        android:background="@color/username_bg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:id="@+id/submitid"
        android:textColor="@color/textcolorlogin"
        android:background="#1bffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordid"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/textcolorlogin"
        android:id="@+id/forgotpasswordid"
        android:background="@color/text_backgroound"
        android:padding="2dp"
        android:layout_below="@id/submitid"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotpasswordid"
        android:text="New User? Register Here."
        android:layout_alignRight="@id/forgotpasswordid"
        android:layout_marginTop="10dp"
        android:textColor="@color/textcolorlogin"
        android:background="@color/text_backgroound"
        android:textSize="15sp"/>

</RelativeLayout>